<% include ./partials/header.ejs %>
     <div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
        <h1 class="text-xl">Creat a new post.</h1>
        <hr class="opacity-10 mt-10">
        <form action="/createpost" method="post" enctype="multipart/form-data">
            <input class=" block w-1/3 px-3 mt-2 py-2" type="file" name="postimage">
            <input class=" block w-1/3 px-3 mt-2 py-2 border-2 rounded-md" type="text" placeholder="Title" name="title">
            <textarea class="  h-60 block w-1/3 px-3 mt-2 py-2 border-2 rounded-md" type="text" placeholder="Description" name="Description"></textarea>
            <input class=" block w-1/3 px-3 mt-2 py-2  rounded-md bg-red-700" type="submit" value="Create Post">
        </form>
     </div>
